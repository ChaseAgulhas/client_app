<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.system.odering.front_end.activities.EditPasswordActivity">

    <TextView
        android:text="Edit Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/lblEditPassword"
        android:textSize="28sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/lblEditPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:id="@+id/txtNewPassword"
        android:hint="New Password"
        android:selectAllOnFocus="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/txtNewPassword"
        android:layout_alignRight="@+id/txtNewPassword"
        android:layout_alignEnd="@+id/txtNewPassword"
        android:layout_marginTop="73dp"
        android:id="@+id/txtConfirmPassword"
        android:hint="Confirm Password"
        android:selectAllOnFocus="true" />

    <Button
        android:text="@string/save_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:id="@+id/btnSavePassword"
        android:backgroundTint="@android:color/holo_green_dark"
        android:onClick="saveNewPassword"/>
</RelativeLayout>
