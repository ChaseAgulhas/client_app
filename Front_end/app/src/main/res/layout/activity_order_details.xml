<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.OrderDetailsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your details"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_login_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:id="@+id/tbl_customer_details">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txt_customer_name"
                android:hint="Customer name"
                android:padding="20dp"
                android:fontFamily="monospace" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textWebEditText"
                android:ems="10"
                android:id="@+id/txt_customer_address"
                android:hint="Address"
                android:padding="20dp"
                android:fontFamily="monospace" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textWebEditText"
                android:ems="10"
                android:id="@+id/txt_customer_email"
                android:hint="Email"
                android:padding="20dp"
                android:fontFamily="monospace" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textWebEditText"
                android:ems="10"
                android:id="@+id/txt_customer_phone"
                android:hint="Phone number"
                android:padding="20dp"
                android:fontFamily="monospace" />
        </TableRow>

    </TableLayout>

    <Button
        android:text="Cancel Order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_cancel_order"
        android:fontFamily="monospace"
        android:onClick="actionCancelOrder"
        android:layout_marginBottom="29dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Place order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_place_order"
        android:fontFamily="monospace"
        android:onClick="actionPlaceOrder"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"
        android:layout_alignTop="@+id/btn_cancel_order"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
