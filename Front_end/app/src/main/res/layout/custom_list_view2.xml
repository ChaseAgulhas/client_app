<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:scaleX="1"
        android:scaleY="1"
        android:src="@android:drawable/ic_delete" />

    <TextView
        android:id="@+id/custom_list_view2_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/delete"
        android:text="The name of the product goes here and its grams"
        android:textSize="20dp" />



    <TextView
        android:id="@+id/custom_list_view2_shipping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/custom_list_view2_product_name"
        android:layout_below="@+id/custom_list_view2_product_name"
        android:layout_marginTop="15dp"
        android:text="Delivery: "
        android:textSize="14dp"
        android:textColor="#757575"/>

    <TextView
        android:id="@+id/custom_list_view2_shipping_value"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/custom_list_view2_shipping"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@+id/custom_list_view2_shipping"
        android:text="FREE delivery"
        android:textSize="14dp"
        android:textColor="#757575"/>


    <View
        android:id="@+id/view1"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/custom_list_view2_spinner1"
        android:layout_below="@+id/custom_list_view2_product_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/custom_list_view2_shipping_value"
        android:background="#E6E6E6" />

    <TextView
        android:id="@+id/qty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/view1"
        android:layout_below="@+id/custom_list_view2_product_name"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:text="Qty"
        android:textSize="14dp"
        android:textColor="#757575"/>

    <Spinner
        android:id="@+id/custom_list_view2_spinner1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/qty_text"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/view1"/>

    <View
        android:id="@+id/view2"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/custom_list_view2_spinner1"
        android:layout_below="@+id/custom_list_view2_product_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/custom_list_view2_spinner1"
        android:background="#E6E6E6" />


    <TextView
        android:id="@+id/custom_list_view2_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_list_view2_product_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/view2"
        android:text="R:"
        android:textColor="#191919"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/custom_list_view2_product_price_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_list_view2_product_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/custom_list_view2_product_price"
        android:text="5000"
    android:textColor="#191919"
    android:textSize="20dp" />


    <View
        android:id="@+id/custom_list_view2_horizontal_rule"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view1"
        android:layout_marginTop="5dp"
        android:background="#E6E6E6" />
